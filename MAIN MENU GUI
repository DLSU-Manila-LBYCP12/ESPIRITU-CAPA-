
import acm.graphics.*;
import acm.program.*;
import java.awt.Color;
import java.awt.event.MouseAdapter;
import java.awt.event.MouseEvent;

public class MAINCLASS extends GraphicsProgram
{
    int theLeft4DeadCHAR_TRUE = 0;
    int theWoodsCHAR_TRUE = 0;
    int theAlleyCHAR_TRUE = 0;
    
    public void init()
    {
        startMenuButtons();
       
    }
   public void run()
   {
     this.setSize(1100, 700);
     this.setBackground(Color.BLACK);
   }
   
   public void startMenuButtons()
   {
      GRect Rect = new GRect(500,500,150,50);
      Rect.setFillColor(Color.yellow);
      Rect.setFilled(true);
      add(Rect);
      
      Rect.addMouseListener(new MouseAdapter()
      {
          public void mouseClicked(MouseEvent e)
              {
                  println("c");
              }
          
          public void mousePressed(MouseEvent e)
              {
                  Rect.setFillColor(Color.WHITE);
                  println("p");
              }
          
          public void mouseReleased(MouseEvent e)
              {
                  Rect.setFillColor(Color.YELLOW);
                  println("r");
                  removeAll();
                  theStreet();
              }
       
      });         
   }
   
   public void theStreet()
   {
       GImage theStreetBG = new GImage("theStreetBG.jpg");
       theStreetBG.setSize(1100, 700);
       add(theStreetBG);
       
       GImage Image2 = new GImage("img2.jpg");
       Image2.setLocation(300, 300);
       Image2.setSize(200, 200);
       add(Image2);      
       
   
      GRect theWoodsButton = new GRect(660,550,120,40);
      theWoodsButton.setFillColor(Color.yellow);
      theWoodsButton.setFilled(true);
      add(theWoodsButton);
      
      GLabel theWoodsButtonLabel = new GLabel("Go Right");
      theWoodsButtonLabel.setLocation(660, 580);
      add(theWoodsButtonLabel);
      
  
          GRect theAlleyButton = new GRect(460,550,120,40);
      theAlleyButton.setFillColor(Color.yellow);
      theAlleyButton.setFilled(true);
      add(theAlleyButton);
    
      
      GRect theLeft4DeadButton = new GRect(260,550,120,40);
      theLeft4DeadButton.setFillColor(Color.yellow);
      theLeft4DeadButton.setFilled(true);
      add(theLeft4DeadButton);
     
      
  
      
      theWoodsButton.addMouseListener(new MouseAdapter()
      {
          public void mouseClicked(MouseEvent e)
              {
                  println("c");
              }
          
          public void mousePressed(MouseEvent e)
              {
                  theWoodsButton.setFillColor(Color.WHITE);
                  println("p");
              }
          
          public void mouseReleased(MouseEvent e)
              {
                  theWoodsButton.setFillColor(Color.YELLOW);
                  println("r");
                 
                  removeAll();
                  theWoods();
                  
                  
              }
       
      });  
      
      theAlleyButton.addMouseListener(new MouseAdapter()
      {
          public void mouseClicked(MouseEvent e)
              {
                  println("c");
              }
          
          public void mousePressed(MouseEvent e)
              {
                  theAlleyButton.setFillColor(Color.WHITE);
                  println("p");
              }
          
          public void mouseReleased(MouseEvent e)
              {
                  theAlleyButton.setFillColor(Color.YELLOW);
                  println("r");
                 
                  removeAll();
                  theAlley();
                  
                  
              }
       
      });  
      
        theLeft4DeadButton.addMouseListener(new MouseAdapter()
      {
          public void mouseClicked(MouseEvent e)
              {
                  println("c");
              }
          
          public void mousePressed(MouseEvent e)
              {
                  theLeft4DeadButton.setFillColor(Color.WHITE);
                  println("p");
              }
          
          public void mouseReleased(MouseEvent e)
              {
                  theLeft4DeadButton.setFillColor(Color.YELLOW);
                  println("r");
                
                  removeAll();
                  theLeft4Dead();
                  
                  
              }
       
      });
   }
   
   public void theWoods()
   {
       GImage theWoodsBG = new GImage("theWoodsBG.jpg");
       theWoodsBG.setSize(1100, 700);
       add(theWoodsBG);
       
       GImage theWoodsCHAR = new GImage("theWoodsCHAR.jpg");
       theWoodsCHAR.setSize(300, 300);
       theWoodsCHAR.setLocation(260, 300);
       add(theWoodsCHAR);
       
         
      GRect theWoods_BACKBUTTON = new GRect(260,550,120,40);
      theWoods_BACKBUTTON.setFillColor(Color.yellow);
      theWoods_BACKBUTTON.setFilled(true);
      add(theWoods_BACKBUTTON);
       
       if(theWoodsCHAR_TRUE==1)
       {
           theWoodsCHAR.setVisible(false);
       }
       
        theWoodsCHAR.addMouseListener(new MouseAdapter()
        {
          public void mouseClicked(MouseEvent e)
              {
                  
              }
          
          public void mousePressed(MouseEvent e)
              {

              }
          
          public void mouseReleased(MouseEvent e)
              {
                  println("r");
                  theWoodsCHAR_TRUE=1;
                  removeAll();
                  theWoods();                 
              }
       
        });
        
        theWoods_BACKBUTTON.addMouseListener(new MouseAdapter()
        {
          public void mouseClicked(MouseEvent e)
              {
                  
              }
          
          public void mousePressed(MouseEvent e)
              {

              }
          
          public void mouseReleased(MouseEvent e)
              {
                  println("r");
                  
                  removeAll();
                 theStreet();         
              }
       
        });
       
   }
   
   public void theAlley()
   {
       GImage theAlleyBG = new GImage("theWoodsBG.jpg");
       theAlleyBG.setSize(1100, 700);
       add(theAlleyBG);
       
       GImage theAlleyCHAR = new GImage("theWoodsCHAR.jpg");
       theAlleyCHAR.setSize(300, 300);
       theAlleyCHAR.setLocation(260, 300);
       add(theAlleyCHAR);
       
         
      GRect theAlley_BACKBUTTON = new GRect(260,550,120,40);
      theAlley_BACKBUTTON.setFillColor(Color.yellow);
      theAlley_BACKBUTTON.setFilled(true);
      add(theAlley_BACKBUTTON);
       
       if(theAlleyCHAR_TRUE==1)
       {
           theAlleyCHAR.setVisible(false);
       }
       
        theAlleyCHAR.addMouseListener(new MouseAdapter()
        {
          public void mouseClicked(MouseEvent e)
              {
                  
              }
          
          public void mousePressed(MouseEvent e)
              {

              }
          
          public void mouseReleased(MouseEvent e)
              {
                  println("r");
                  theAlleyCHAR_TRUE=1;
                  removeAll();
                  theAlley();                 
              }
       
        });
        
        theAlley_BACKBUTTON.addMouseListener(new MouseAdapter()
        {
          public void mouseClicked(MouseEvent e)
              {
                  
              }
          
          public void mousePressed(MouseEvent e)
              {

              }
          
          public void mouseReleased(MouseEvent e)
              {
                  println("r");
                  
                  removeAll();
                 theStreet();       
              }
       
        });
       
   }
   
      public void theLeft4Dead()
    {
       GImage theLeft4DeadBG = new GImage("theLeft4DeadBG.jpg");
       theLeft4DeadBG.setSize(1100, 700);
       add(theLeft4DeadBG);
       
       GImage theLeft4DeadCHAR = new GImage("theWoodsCHAR.jpg");
       theLeft4DeadCHAR.setSize(300, 300);
       theLeft4DeadCHAR.setLocation(260, 300);
       add(theLeft4DeadCHAR);
       
         
      GRect theLeft4Dead_BACKBUTTON = new GRect(260,550,120,40);
      theLeft4Dead_BACKBUTTON.setFillColor(Color.yellow);
      theLeft4Dead_BACKBUTTON.setFilled(true);
      add(theLeft4Dead_BACKBUTTON);
       
       if(theLeft4DeadCHAR_TRUE==1)
       {
           theLeft4DeadCHAR.setVisible(false);
       }
       
        theLeft4DeadCHAR.addMouseListener(new MouseAdapter()
        {
          public void mouseClicked(MouseEvent e)
              {
                  
              }
          
          public void mousePressed(MouseEvent e)
              {

              }
          
          public void mouseReleased(MouseEvent e)
              {
                  println("r");
                  theLeft4DeadCHAR_TRUE=1;
                  removeAll();
                  theLeft4Dead();                 
              }
       
        });
        
        theLeft4Dead_BACKBUTTON.addMouseListener(new MouseAdapter()
        {
          public void mouseClicked(MouseEvent e)
              {
                  
              }
          
          public void mousePressed(MouseEvent e)
              {

              }
          
          public void mouseReleased(MouseEvent e)
              {
                  println("r");
                  
                  removeAll();
                 theStreet();         
              }
       
        });
       
   }
   

   
}
  
